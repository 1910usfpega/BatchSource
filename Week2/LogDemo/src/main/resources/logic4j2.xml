<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="Console" target="System_out">
			<PatternLayout>
				<Pattern>
				[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n
				</Pattern>
			</PatternLayout>
		</Console>
		<File name="File" fileName="C:/Users/Benright/Documents/Revature/Spring Tool Suite 4/sts-4.4.0.RELEASE/workspace/Week2/LogDemo/logging.log">
			<PatternLayout>
				<Pattern>
					[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n
				</Pattern>
			</PatternLayout>
		
		</File>
	</Appenders>
	<Loggers>
		<Logger name="com.revature.LoggingExample" level = "debug" additivity= "false">
			<AppenderRef ref="Console"/>
			<AppenderRef ref = "File"/>
		</Logger>
		<Root>
			<AppenderRef ref="Console"/>
			<AppenderRef ref = "File"/>
		</Root>
	</Loggers>
</Configuration>